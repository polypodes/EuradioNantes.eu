{
  "name": "euradio_front-end",
  "version": "1.0.0",
  "description": "front-end part of euradionantes.eu",
  "main": "index.js",
  "scripts": {
    "test": "npm run jscs && npm run eslint && npm run scsslint",
    "start": "npm run serve & npm run watch",
    "build": "npm run jade && npm run sass && npm run webpack && npm run image",
    "jscs": "jscs src/",
    "eslint": "eslint src/",
    "scsslint": "scss-lint src/",
    "sass": "pleeease-compile",
    "jade": "jade --pretty ./src/*.jade -o ./dist",
    "webpack": "if [[ \"${NODE_ENV}\" == \"production\" ]]; then webpack -p; else webpack; fi",
    "image": "./node_modules/imagemin-cli/cli.js ./src/images/* ./dist/assets/images",
    "serve": "./node_modules/browser-sync/bin/browser-sync.js start --no-open --server dist",
    "cms": "npm run build && cp -r dist/assets ../web",
    "watch": "npm run serve && npm run watch:jade & npm run watch:sass & npm run watch:js",
    "watch:jade": "./node_modules/nodemon/bin/nodemon.js --ext jade --watch src/ --exec \"npm run jade && ./node_modules/browser-sync/bin/browser-sync.js reload\"",
    "watch:sass": "./node_modules/nodemon/bin/nodemon.js --ext scss --watch src/ --exec \"npm run sass && ./node_modules/browser-sync/bin/browser-sync.js reload\"",
    "watch:js": "./node_modules/nodemon/bin/nodemon.js --ext js --watch src/ --exec \"npm run webpack && ./node_modules/browser-sync/bin/browser-sync.js reload\"",
    "clean": "rm -rf ./dist"
  },
  "author": "LesPolypodes <contact@lespolypodes.com>",
  "license": "ISC",
  "dependencies": {
    "amd-define-factory-patcher-loader": "^1.0.0",
    "babel": "^5.8.19",
    "babel-core": "^5.8.20",
    "babel-loader": "^5.3.2",
    "bootstrap-sass": "^3.3.5",
    "browser-sync": "^2.8.1",
    "csslint": "^0.10.0",
    "eslint": "^1.2.1",
    "eslint-plugin-smells": "^1.0.1",
    "expose-loader": "^0.7.0",
    "html-validator": "0.0.8",
    "imagemin-cli": "1.0.0",
    "jade": "^1.11.0",
    "jscs": "^2.1.0",
    "node-sass": "^3.4.1",
    "nodemon": "^1.4.0",
    "npm-watch": "0.0.0",
    "pleeease": "^3.4.0",
    "pleeease-cli": "^3.2.8",
    "w3cjs": "^0.3.0",
    "wavesurfer.js": "^1.0.42",
    "webpack": "^1.10.5"
  },
  "devDependencies": {
    "gulp-sass": "^2.3.1",
    "imagemin": "^4.0.0"
  }
}
