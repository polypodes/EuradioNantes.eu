<section class="content-main">
  <div class="breadcrumb"><a href="#" title="Lien vers la page d'accueil d'euradionantes" class="breadcrumb-item">Accueil</a><a href="#" title="Lien vers la page des actualitées" class="breadcrumb-item">Actualités</a><span class="breadcrumb-item">Les Lorem Ipsum en concert</span></div>

  {% if post.collection -%}
    <span class="bloc-content-cat">{{ post.collection.name }}</span>
  {%- endif %}

  {% if post.podcast %}
  <time datetime="{{ post.podcast.realTimeStart | date('Y-m-d H:i') }}" class="bloc-content-date">{{ post.podcast.realTimeStart | localizeddate('long', 'none', 'fr-FR') }}</time>
  {% else %}
  <time datetime="{{ post.publicationDateStart | date('Y-m-d H:i') }}" class="bloc-content-date">{{ post.publicationDateStart | localizeddate('long', 'none', 'fr-FR') }}</time>
  {% endif %}

  <h1 class="content-title">{{ post.title }}</h1>

  {% if post.image -%}
    <figure class="content-img">
      <img src="{% path post.image, 'large' %}" srcset="{% path post.image, 'large_mobile' %} 480w, {% path post.image, 'large' %} 1900w" alt="Illustration de l'article" class="bloc-content-img img-responsive">
    </figure>
  {%- endif %}

  {{ post.content|raw }}

  {% if post.author %}
  <div data-clickable="true" class="author">
    {% if post.author.image %}
    <img src="//unsplash.it/50x50" alt="" class="author-img">
    {% endif %}
    <div class="author-text">
      {% set authorname = post.author.fullname != '' ? post.author.fullname : post.author.username %}
      <div class="author-sup">Rédigé par</div><a href="#" data-clickable-target="true" title="Lien vers les articles de {{ authorname }}" class="author-title">{{ authorname }}</a>
    </div>
  </div>
  {% endif %}

  {% if post.podcast %}
    {{ include('PodcastBundle:Podcast:player.html.twig', {'podcast': post.podcast}) }}
  {% endif %}

  {{ include(':Social:share.html.twig') }}

  <section class="comment">
    {% render(controller('SonataNewsBundle:Post:comments', {'postId': post.id})) %}

    {% if post.iscommentable %}
      {% render(controller('SonataNewsBundle:Post:addCommentForm', {
          'postId': post.id,
          'form': form,
          'title' : post.title~' - Podcast - Eur@dioNantes'
      })) %}
    {% else %}
      <p><em>{{ 'message_comments_are_closed'|trans({}, 'SonataNewsBundle') }}</em></p>
    {% endif %}
  </section>
</section>
